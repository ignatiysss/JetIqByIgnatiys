<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.message.MessageFragment">


    <TextView
        android:id="@+id/textNameStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/name_of_student"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayoutFragmentHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewHomePhoto" />

    <ImageView
        android:id="@+id/imageViewHomePhoto"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/profile_photo"
        app:civ_circle_background_color="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutFragmentHome"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNameStudent">

        <ImageButton
            android:id="@+id/imageButtonMaterial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:contentDescription="@string/material"
            android:src="@drawable/baseline_folder_24"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonScheduleFragmentHome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewMaterialFragmentHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/material"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonMaterial"
            app:layout_constraintStart_toStartOf="@+id/imageButtonMaterial"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonMaterial" />

        <ImageButton
            android:id="@+id/imageButtonScheduleFragmentHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:contentDescription="@string/schedule"
            android:src="@drawable/baseline_event_note_60"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonMessageFragmentHome"
            app:layout_constraintStart_toEndOf="@+id/imageButtonMaterial"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewScheduleFragmentHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/schedule"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonScheduleFragmentHome"
            app:layout_constraintStart_toStartOf="@+id/imageButtonScheduleFragmentHome"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonScheduleFragmentHome" />

        <ImageButton
            android:id="@+id/imageButtonMessageFragmentHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:contentDescription="@string/messages"
            android:src="@drawable/baseline_email_60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButtonScheduleFragmentHome"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textViewMessageFragmentHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/messages"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonMessageFragmentHome"
            app:layout_constraintStart_toStartOf="@+id/imageButtonMessageFragmentHome"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonMessageFragmentHome" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/smth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/messages"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutFragmentHome" />

</androidx.constraintlayout.widget.ConstraintLayout>